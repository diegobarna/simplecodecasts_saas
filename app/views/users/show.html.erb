<div class="row">
  <div class="col-md-4 text-center">
    <%= image_tag @user.profile.avatar.url(:medium), class: 'picture-round user-show-avatar' %>
  </div>
  <div class="col-md-5">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job_title_icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
    <div class="well profile-block profile-description">
      <h3>Description</h3>
      <p><%= @user.profile.description %></p>
    </div>
    <% if current_user == @user || current_user.plan_id == 2 %>
    <div class="well profile-block contact-info">
      <h3>Contact Info</h3>
      <p><%= @user.profile.phone_number %></p>
      <p><%= @user.profile.contact_email %></p>
    </div>
    <% end %>
  </div>
</div>

